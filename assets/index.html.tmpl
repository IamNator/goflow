<html>
	<head>
		<link rel="stylesheet" href="/static/css/styles.css">
		<script src="/static/submit.js"></script>
		<script src="/static/pollster.js"></script>
		<script>
		{{ range $ix, $jobName := .jobNames }}
			pollster("{{ $jobName }}")();
		{{ end }}
		</script>
		<title>Goflow</title>
	</head>
	<body>
		<div class="job-container">
			<h1>
				Jobs
			</h1>
			<div class="table">
				<div>Job</div>
				<div>State</div>
				<div></div>
				{{ range $ix, $jobName := .jobNames }}
				<div><a href="/jobs/{{ $jobName }}">{{ $jobName }}</a></div>
				<div id="{{ $jobName }}"></div>
				<div class="button-container"><button class="button primary" onclick="submit({{ $jobName }})">Submit</button></div>
				{{ end }}
			</div>
		</div>
	</body>
</html>
